// FAVORITES =>  
        READ & WRITE & UPDATE & DELETE:
                Authenticated & Only data under own uid
// PRODUCTS => 
        READ & WRITE & UPDATE & DELETE:
                Authenticated & Only data under own uid
// REVIEWS => 
        READ: Anybody , WRITE & UPDATE & DELETE :
                Authenticated and same Uid with creator 
// SUPPORT => 
        READ & WRITE & UPDATE & DELETE: 
                Authenticated & Only data under own uid

// INSTRUCTIONS => 
        READ: Anybody , WRITE & UPDATE & DELETE :
                Authenticated and same Uid with creator 

// RECIPES =>
        READ: Anybody , WRITE & UPDATE & DELETE : 
                Authenticated and same Uid with creator 




rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if
          request.time < timestamp.date(2021, 8, 20);
    }
  }
}